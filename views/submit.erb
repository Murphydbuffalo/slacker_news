          <label for="url"> URL: </label>
          <input type="text" id="url" name="url" > </input> <br> <br> 

          <label for="description"> Description: </label> <br>
          <input type="text" id="description" name="description" title="Minimum of 20 characters." > </input> <br> <br>
          
          <input type="submit"> <%= @error_message %> </input> 
        </form>
      </div>

